{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "server": "nodemon dist/index.js ",
    "watch": "tsc -w",
    "dev": "concurrently \"npm run watch\" \"npm run server\" \"npm run watch-views\"",
    "build": "tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 \"src/views/**/*\" dist/",
    "watch-views": "nodemon --watch src/views -e ejs -x \"npm run copy-files\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.41.0",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "nodemailer": "^6.10.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.3.1",
    "typescipt": "^1.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/ejs": "^3.1.5",
    "@types/nodemailer": "^6.4.17",
    "copyfiles": "^2.4.1"
  }
}
